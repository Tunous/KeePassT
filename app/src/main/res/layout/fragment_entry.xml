<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <me.thanel.keepasst.entry.view.EntryDetailView
            android:id="@+id/userNameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconDrawable="@drawable/ic_person"
            app:menu="@menu/detail_username"
            app:title="@string/username" />

        <include
            android:id="@+id/userNameDivider"
            layout="@layout/divider" />

        <me.thanel.keepasst.entry.view.EntryDetailView
            android:id="@+id/passwordView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconDrawable="@drawable/ic_key"
            app:menu="@menu/detail_password"
            app:title="@string/password" />

        <include
            android:id="@+id/passwordDivider"
            layout="@layout/divider" />

        <me.thanel.keepasst.entry.view.EntryDetailView
            android:id="@+id/urlView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconDrawable="@drawable/ic_link"
            app:menu="@menu/detail_url"
            app:title="@string/url" />

        <include
            android:id="@+id/urlDivider"
            layout="@layout/divider" />

        <include
            android:id="@+id/propertiesDivider"
            layout="@layout/divider" />

        <me.thanel.keepasst.entry.view.EntryDetailView
            android:id="@+id/creationDateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconDrawable="@drawable/ic_date"
            app:title="@string/created" />

        <me.thanel.keepasst.entry.view.EntryDetailView
            android:id="@+id/modificationDateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/modified" />

        <me.thanel.keepasst.entry.view.EntryDetailView
            android:id="@+id/expirationDateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/expires" />

        <include
            android:id="@+id/notesDivider"
            layout="@layout/divider" />

        <me.thanel.keepasst.entry.view.EntryDetailView
            android:id="@+id/notesView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconDrawable="@drawable/ic_note"
            app:title="@string/notes" />

    </LinearLayout>

</ScrollView>
